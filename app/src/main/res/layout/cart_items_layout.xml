<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="35dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/cart_product_sname"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@android:color/transparent"/>

        <TextView
            android:id="@+id/cart_product_ssurname"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@android:color/transparent"/>


        <TextView
            android:id="@+id/cart_product_sphone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@android:color/transparent"/>

        <TextView
            android:id="@+id/cart_product_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/cart_product_quantity"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Product Quantity"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/cart_product_time"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Product Time"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/cart_product_name"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="10dp"/>/>

        <TextView
            android:id="@+id/cart_product_price"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Product Price"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/cart_product_quantity"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>